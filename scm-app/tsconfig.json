{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@views/*": ["app/(auth)/*"],
      "@components/*": ["app/components/*"],
      "@utils/*": ["app/utils/*"],
      "@assets/*": ["app/assets/*"],
      "@ui/*": ["app/ui/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
